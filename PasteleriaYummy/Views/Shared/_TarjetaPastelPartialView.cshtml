@model Pastel


<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImagenThumbnailUrl" alt="">
        <div class="caption">
            <h3 class="pull-right">@Model.Precio.ToString("c")</h3>
            <h3>
                <a asp-controller="Pastel" asp-action="Detalles" asp-route-id="@Model.PastelId">@Model.Nombre</a>
            </h3>
            <p>@Model.DescripcionCorta</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="CarritoCompras"
                   asp-action="AgregarArticuloCarritoCompras"
                   asp-route-idPastel="@Model.PastelId">Agregar al carrito</a>
            </p>
        </div>
    </div>
</div>