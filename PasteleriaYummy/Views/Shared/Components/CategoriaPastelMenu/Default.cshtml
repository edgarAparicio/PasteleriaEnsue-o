@model IEnumerable<Categoria>

<li class="dropdown">
    <a asp-controller="Pastel"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Pasteles<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var categoria in Model)
        {
            <li>
                <a asp-controller="Pastel" asp-action="MostrarListaPasteles" 
                   asp-route-categoriaNombre="@categoria.CategoriaNombre">@categoria.CategoriaNombre</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Pastel" asp-action="MostrarListaPasteles" asp-route-categoriaNombre="">Todos los pasteles</a>
        </li>
    </ul>
</li>
